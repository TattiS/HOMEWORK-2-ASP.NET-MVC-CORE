@model IEnumerable<Task2WebApi.Models.SomeEntity>

@{
    ViewData["Title"] = "GetResult";
}

<h2>Query4</h2>

<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <article>
            <p>Получить список пользователей по алфавиту (по возрастанию) с отсортированными todo items по длине name (по убыванию)</p>
        </article>
    </div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-2">
        <form asp-action="GetResult">
            <div class="form-group">
                <input type="submit" value="Get the result" class="btn btn-default" />
            </div>
        </form>
    </div>
 
    @if (Model != null)
    {
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Todos)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.Avatar)" alt="@Html.DisplayFor(modelItem => item.Avatar)" class="img img-rounded img-responsive" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <ol style="list-style:none;">
                                    @foreach (var todo in item.Todos)
                                    {
                                        <li>@Html.ActionLink($"- {todo.Name}", "ShowTodo", "Show", new { todo.Id }, new { @style = "text-decoration: none;" })</li>

                                    }
                                </ol>
                            </td>
                            <td>

                                @Html.ActionLink("Details", "ShowUser", "Show", new { item.Id }, new { @class = "btn btn-info" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Back Home</a>
</div>